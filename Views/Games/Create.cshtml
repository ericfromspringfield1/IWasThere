@model IWasThere.Models.GameCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Game.GameName" class="control-label"></label>
                <input asp-for="Game.GameName" class="form-control" />
                <span asp-validation-for="Game.GameName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Date" class="control-label"></label>
                <input asp-for="Game.Date" class="form-control" />
                <span asp-validation-for="Game.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.LocationId" class="control-label"></label>
                <select asp-for="Game.LocationId" class="form-control" asp-items="@Model.LocationOptions"></select>

                @* *****THIS SHOWS ENTER A STADIUM FOR EVERY LABEL*****
                Html.EditorFor(model => model.LocationId,
            new
                 {
                     htmlAttributes = new
                     {
                         @class = "form-control input-md",
            @placeholder = "Select A Stadium"
                     }
                 })
                    *@

                   @* OR OR OR OR OR *@

                  @* SHOWS "LOCATION" IN EVERY LABEL
                     @Html.EditorFor(Game => Game.LocationId, new { htmlAttributes = 
                    new { @class = "form-control input-md", 
                    placeholder = @Html.DisplayNameFor(m=>m.Game.LocationId) } }) *@
                     
                    
            </div>
            <div class="form-group">
                <label asp-for="Game.HomeTeamId" class="control-label"></label>
                <select asp-for="Game.HomeTeamId" class="form-control" asp-items="@Model.HomeTeamOptions"></select>
            </div>
            <div class="form-group">
                <label asp-for="Game.HomeScore" class="control-label"></label>
                <input asp-for="Game.HomeScore" class="form-control" />
                <span asp-validation-for="Game.HomeScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.AwayTeamId" class="control-label"></label>
                <select asp-for="Game.AwayTeamId" class="form-control" asp-items="@Model.AwayTeamOptions"></select>
            </div>
            <div class="form-group">
                <label asp-for="Game.AwayScore" class="control-label"></label>
                <input asp-for="Game.AwayScore" class="form-control" />
                <span asp-validation-for="Game.AwayScore" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Game.Notes" class="control-label"></label>
                <input asp-for="Game.Notes" class="form-controlStory" />
                <span asp-validation-for="Game.Notes" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
