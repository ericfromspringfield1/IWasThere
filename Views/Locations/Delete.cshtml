@model IWasThere.Models.Location

@{
    ViewData["Title"] = "Delete";
    @if (Model.HomeGames.Count() > 0)
    {
        <h1>Not So Fast My Friend</h1>
        <hr />
        <div>
            <h4>
                @Model.StadiumName is currently associated with @Model.HomeGames.Count() or more game(s). A location associated
                with a game cannot be deleted.
            </h4>

            <form asp-action="Index">
                <input type="hidden" asp-for="LocationId" />
                <input type="submit" value="Back To Stadiums/Locations List" class="btn btn-danger" />

            </form>
        </div>
    }

    @if (Model.HomeGames.Count() == 0)
    {
        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Location</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.StadiumName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.StadiumName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.State)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.State)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="LocationId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    }
}
