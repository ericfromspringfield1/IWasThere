@model IWasThere.Models.Team
@{

    ViewData["Title"] = "Delete";


    @if (Model.HomeGames.Count() > 0 || Model.AwayGames.Count() > 0)
    {
        <h1>Not So Fast My Friend</h1>
        <h4>
            @Model.TeamName is currently associated with  @Model.HomeGames.Count() home game(s) and @Model.AwayGames.Count() away game(s).A team associated
            with a game cannot be deleted.
        </h4>

        <form asp-action="Delete">
            <input type="hidden" asp-for="TeamId" />
            <input type="hidden" value="Delete" class="btn btn-danger" />
            <a asp-action="Index">Back to List</a>
        </form>
    }

    @if (Model.HomeGames.Count() == 0 && Model.AwayGames.Count() == 0)
    {


        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Team</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TeamName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TeamName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nickname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nickname)
                </dd>
            </dl>


            <form asp-action="Delete">
                <input type="hidden" asp-for="TeamId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
        }
    }

